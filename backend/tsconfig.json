{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",

    /* ✅ Required for NestJS decorators */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,   // <--- IMPORTANT for TS 5+

    /* ✅ Module resolution & path aliases */
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },

    /* ✅ Type safety */
    "strict": true,
    "strictPropertyInitialization": false, // <--- Optional (avoids 'Property has no initializer' errors)
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test",
    "**/*.spec.ts",
    "**/*.test.ts"]
}
